mixin header({ brand, menu, contact } = data)
    - 
        const navLinkClass = 'header__nav__link';
        const activePage = '/'+data.chunks[0]+'.html';

    header.header
        .overlay
        .container.header__container 
            .header__logo 
                +link({attrs: brand.link.attrs})
                    +iconsvg({id: brand.logo.id})
            .header__button.display--sm
                button.btn.btn-toggle(aria-label="menu button")
                    span
            nav.header__nav
                .header__nav__list
                    each item in menu.mainMenu.items 
                        -
                            const navLinkObj = {attrs: {href: item.attrs.href, class: navLinkClass}}
                            if (activePage === item.attrs.href) {
                                navLinkObj.attrs.class += ' is-active'
                            }
                        if item.dropdown 
                            .header__nav__item.has-dropdown 
                                +link(navLinkObj)
                                        | #{item.anchor}
                                .header__nav__dropdown__wrapper
                                    .header__nav__dropdown 
                                        each drop in item.dropdown 
                                            +link({attrs: drop.attrs})
                                                | #{drop.anchor}
                        else
                            .header__nav__item
                                +link(navLinkObj)
                                    | #{item.anchor}
                    .header__nav__item
                        +link(menu.mainMenu.button)
                            | #{menu.mainMenu.button.text}